<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:clickable="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="#60b29600"
        android:layout_marginTop="57dp" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/cv"
        android:backgroundTint="@android:color/transparent"
        android:paddingLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingRight="5dp"
        android:padding="5dp"
        CardView:cardCornerRadius="1dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mentorPicture"
                android:layout_width="45dp"
                android:layout_height="140dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/unknown"
                />

            <TextView
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:id="@+id/mentorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thabo Masemola"
                android:textColor="@android:color/white"
                android:textSize="@dimen/contact_name" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/mentorLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:text="Polokwane"
                android:layout_marginRight="5dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/contact_number" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
