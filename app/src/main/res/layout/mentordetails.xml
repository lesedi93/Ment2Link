<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="200dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:id="@+id/req_photo"
            android:background="@android:color/white"
            android:layout_below="@+id/req_men_name"
           android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/req_men_name"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reason"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="13dp"
            android:textStyle="bold"
            android:text="Specialisation"
            android:fontFamily="sans-serif"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:layout_below="@+id/req_photo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/person_reason"
            android:padding="1dp"
            android:fontFamily="sans-serif"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_below="@+id/reason"

            />



        <TextView
            android:id="@+id/email1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/person_reason"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:text=""
            android:layout_centerHorizontal="true"
            />


        <TextView
            android:id="@+id/bois"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email1"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="I served in United States Marine Corps for 26 years, where I spent 10 years as an Intelligence Analyst/Chief and 16 years as a Counterintelligence specialist."
            android:textSize="11sp" />


        <TextView
            android:layout_marginTop="6dp"
            android:id="@+id/ava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bois"
            android:layout_centerHorizontal="true"
            android:text="Availability"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp">

        <TableRow>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.1"
                android:src="@drawable/ic_date_range_black_v"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/calender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text=""
                android:fontFamily="sans-serif"
                android:textColor="@android:color/black"
                tools:text="11-02-2018">

            </TextView>



        </TableRow>

        <TableRow>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.1"
                android:src="@drawable/ic_location_on_black_v" />

            <TextView
                android:id="@+id/location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:hint=""
                android:fontFamily="sans-serif"
                android:textColor="#00FFFF"
                tools:text="The Digital Academy Floor 7">

            </TextView>


        </TableRow>

        <TableRow>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.1"
                android:src="@drawable/ic_access_time_black_v" />

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/black"
                tools:text="8h00AM - 9H30AM">

            </TextView>


        </TableRow>

        <!--<Spinner-->
            <!--android:id="@+id/spinner"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textColor="@android:color/black"-->
            <!--/>-->

    </TableLayout>

</LinearLayout>
